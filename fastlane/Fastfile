    sh "bundle exec fastlane ios iOSrsiAppStoreDistributePublicBeta#{options}"
    sh "bundle exec fastlane ios iOSrtrAppStoreDistributePublicBeta#{options}"
  end

  desc 'Sends latest iOS AppStore dSYMs to App Center. Optional \'build_number\', \'version\' or \'min_version\' parameters.'
  lane :iOSdSYMs do |options|
    min_version = options[:min_version]
    version = options[:version]
    build_number = options[:build_number]

    options = ''
    options += " min_version:#{min_version}" if min_version
    options += " version:#{version}" if version
    options += " build_number:#{build_number}" if build_number

    sh "bundle exec fastlane ios iOSswiDSYMs#{options}"
    sh "bundle exec fastlane ios iOSsrfDSYMs#{options}"
    sh "bundle exec fastlane ios iOSrtsDSYMs#{options}"
    sh "bundle exec fastlane ios iOSrsiDSYMs#{options}"
    sh "bundle exec fastlane ios iOSrtrDSYMs#{options}"
  end

